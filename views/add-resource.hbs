<div class="container__resouce">
  <h2>Add Resouce</h2>
  <form action="/add" method="post">
    <select id="selec-menu" name="category">
      <option value="hide">Select Category</option>
      <option value="Event">Event</option>
      <option value="Culture">Culture</option>
      <option value="Sports">Sports</option>
      <option value="Food">Food</option>
    </select>
    <div class="form__group">
      <input name='shortdescr' type='text' placeholder="Title">
      <textarea name="longdescr" cols="30" rows="6" placeholder="Description"></textarea>
      <input name='location' type='text' placeholder="Where?">
      <input name='date' type='text' placeholder="When?">
      <input name='image' type='text' placeholder="Image link (optional)">
    </div>
    <button class="btn">Submit</button>
  </form>
  {{#if error}}
  <p class="error-msg" style="color:red">ERROR: {{error}}</p>
  {{/if}}
</div>